<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="5dp"
        app:cardMaxElevation="5dp"
        app:cardPreventCornerOverlap="true"
        app:cardUseCompatPadding="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tv_address_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Address"
                    android:textSize="18sp"
                    android:textColor="@android:color/black"
                    android:fontFamily="sans-serif-black"
                    android:layout_alignParentStart="true"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="10dp"/>


                <Button
                    android:id="@+id/btn_edit_address"
                    android:layout_width="40dp"
                    android:layout_height="20dp"

                    android:text="Edit"
                    android:textSize="10sp"
                    android:textColor="@android:color/white"
                    android:fontFamily="sans-serif-black"
                    android:background="@drawable/border"
                    android:layout_marginTop="8dp"

                    android:layout_toLeftOf="@id/btn_delete_address"/>

                <Button
                    android:id="@+id/btn_delete_address"
                    android:layout_width="50dp"
                    android:layout_height="20dp"
                    android:text="Delete"
                    android:textSize="10sp"
                    android:textColor="@android:color/white"
                    android:fontFamily="sans-serif-black"
                    android:background="@drawable/border"
                    android:layout_marginTop="8dp"
                    android:layout_alignParentEnd="true"
                    android:layout_marginRight="10dp"/>




            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_address"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:text="L65/1205,Shapoorji Pallonji Shukhubristi,New Town Action Area III,Kolkata-700135,West Bengal,India,Near DLF New Town Heights">

                </TextView>


            </LinearLayout>



        </LinearLayout>


    </androidx.cardview.widget.CardView>


</LinearLayout>