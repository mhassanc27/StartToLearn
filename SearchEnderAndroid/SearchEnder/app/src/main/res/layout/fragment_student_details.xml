<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android.support.design="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:id="@+id/ll_register"
    android:background="@android:color/background_light"
    android:padding="10dp">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/rl_profile"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        xmlns:android.support.design="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:background="@drawable/card_background">


        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/civ_profile_pic"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/image_aniya"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="50dp"/>

        <TextView
            android:id="@+id/tv_profile_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Aniya Rahman"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            android:fontFamily="sans-serif-black"
            android:layout_below="@+id/civ_profile_pic"
            android:layout_centerHorizontal="true"/>

        <TextView
            android:id="@+id/tv_profile_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="anyarahmanchaudhury@gmail.com"
            android:textColor="@android:color/white"
            android:textSize="10dp"
            android:fontFamily="sans-serif-black"
            android:layout_below="@+id/tv_profile_name"
            android:layout_centerHorizontal="true"/>

        <TextView
            android:id="@+id/tv_profile_mobile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="9163735937"
            android:textColor="@android:color/white"
            android:textSize="10dp"
            android:fontFamily="sans-serif-black"
            android:layout_below="@+id/tv_profile_email"
            android:layout_centerHorizontal="true"/>
        <ImageView
            android:id="@+id/iv_menu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_menu_black_24dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            app:tint="@android:color/white"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_notifications_active_black_24dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="5dp"
            android:layout_marginTop="5dp"
            app:tint="@android:color/white"/>


    </RelativeLayout>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="5dp">


            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="@color/cardview_shadow_end_color"
                app:cardCornerRadius="5dp"
                app:cardMaxElevation="5dp"
                app:cardPreventCornerOverlap="true"
                app:cardUseCompatPadding="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <Button
                            android:id="@+id/btn_show_address_details"
                            android:layout_width="200dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginRight="50dp"
                            android:background="@drawable/border"
                            android:text="Show Address Details"
                            android:textColor="@android:color/white" />

                        <ImageView
                            android:id="@+id/iv_check_address_details"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"


                            android:layout_marginTop="20dp"

                            android:layout_toRightOf="@+id/btn_show_address_details"
                            android:src="@drawable/ic_check_circle_black_24dp" />


                    </RelativeLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:layout_marginTop="5dp"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tv_show_address_detail"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp">

                        </TextView>


                    </LinearLayout>

                </LinearLayout>


            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="@color/cardview_shadow_end_color"
                app:cardCornerRadius="5dp"
                app:cardMaxElevation="5dp"
                app:cardPreventCornerOverlap="true"
                app:cardUseCompatPadding="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <Button
                            android:id="@+id/btn_add_academic_details"
                            android:layout_width="200dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginRight="50dp"
                            android:background="@drawable/border"
                            android:text="Add Academic Details"
                            android:textColor="@android:color/white" />

                        <ImageView
                            android:id="@+id/iv_check_academic_details"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"


                            android:layout_marginTop="20dp"

                            android:layout_toRightOf="@+id/btn_add_academic_details"
                            android:src="@drawable/ic_check_circle_black_24dp" />


                    </RelativeLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tv_show_academic_detail"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp">

                        </TextView>

                    </LinearLayout>

                </LinearLayout>


            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="@color/cardview_shadow_end_color"
                app:cardCornerRadius="5dp"
                app:cardMaxElevation="5dp"
                app:cardPreventCornerOverlap="true"
                app:cardUseCompatPadding="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <Button
                            android:id="@+id/btn_add_preference_details"
                            android:layout_width="200dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginRight="50dp"
                            android:background="@drawable/border"
                            android:text="Add Preference Details"
                            android:textColor="@android:color/white" />

                        <ImageView
                            android:id="@+id/iv_check_preference_details"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"


                            android:layout_marginTop="20dp"

                            android:layout_toRightOf="@+id/btn_add_preference_details"
                            android:src="@drawable/ic_check_circle_black_24dp" />


                    </RelativeLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:layout_marginTop="5dp"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tv_show_preference_detail"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp">

                        </TextView>


                    </LinearLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>


            <Button
                android:id="@+id/btn_add_student_details"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                android:background="@drawable/card_background"
                android:text="Add Student Details"
                android:textColor="@android:color/white"

                />
        </LinearLayout>
    </ScrollView>
</LinearLayout>